<Window x:Class="Madd0.AzureStorageDriver.ConnectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Azure Storage Account"
        Width="400"
        Background="{StaticResource {x:Static SystemColors.ControlBrushKey}}"
        ResizeMode="NoResize"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">

    <StackPanel Margin="7">
        <Label Padding="0 0 0 3" Target="{Binding ElementName=AccountName}">Storage account _name:</Label>

        <DockPanel>
            <CheckBox x:Name="UseAzureCredential"
                      Margin="30 0 0 5"
                      VerticalAlignment="Center"
                      Content="Use _Azure Credential"
                      DockPanel.Dock="Right"
                      IsChecked="{Binding UseTokenCredential}"
                      TabIndex="2" />
            <TextBox x:Name="AccountName"
                     Margin="0 0 0 5"
                     TabIndex="1"
                     Text="{Binding AccountName}" />
        </DockPanel>

        <Label Padding="0 0 0 3" Target="{Binding ElementName=AccountKey}">Connection string or Storage Uri:</Label>
        <TextBox x:Name="AccountKey"
                 TabIndex="3"
                 Text="{Binding AccountKey}" />

        <CheckBox Margin="0 10"
                  Content="_Remember this connection"
                  IsChecked="{Binding Persist}"
                  TabIndex="5" />

        <Expander Header="_Advanced">
            <Grid Margin="23 5 0 0">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Label Grid.Row="1"
                       Padding="0 5"
                       Target="{Binding ElementName=SampleLines}">
                    Number of lines to _sample:
                </Label>
                <TextBox x:Name="SampleLines"
                         Grid.Row="1"
                         Grid.Column="1"
                         Width="50"
                         Margin="5"
                         HorizontalAlignment="Right"
                         Text="{Binding NumberOfRows}"
                         TextAlignment="Right" />
                <Grid Grid.Row="1"
                      Grid.Column="2"
                      Margin="0 5"
                      HorizontalAlignment="Left">
                    <Grid.ToolTip>
                        <ToolTip>
                            <TextBlock>The number of lines that will be read in order to determine the schema of an Azure Table.</TextBlock>
                        </ToolTip>
                    </Grid.ToolTip>
                    <Ellipse Width="15"
                             Height="15"
                             Fill="#3CA1C8" />
                    <TextBlock Margin="0 1 0 0"
                               HorizontalAlignment="Center"
                               FontWeight="Bold"
                               Foreground="White"
                               Text="?" />
                </Grid>

                <Label Grid.Row="2"
                       Padding="0 5 0 10"
                       Target="{Binding ElementName=Parallelism}">
                    Schema loading _parallelism:
                </Label>
                <TextBox x:Name="Parallelism"
                         Grid.Row="2"
                         Grid.Column="1"
                         Width="50"
                         Margin="5 5 5 10"
                         HorizontalAlignment="Right"
                         Text="{Binding ModelLoadMaxParallelism}"
                         TextAlignment="Right" />
                <Grid Grid.Row="2"
                      Grid.Column="2"
                      Margin="0 5 0 10"
                      HorizontalAlignment="Left">
                    <Grid.ToolTip>
                        <ToolTip>
                            <TextBlock>The number of concurrent calls that will be made to Azure Table Storage to determine the columns available for each table.</TextBlock>
                        </ToolTip>
                    </Grid.ToolTip>
                    <Ellipse Width="15"
                             Height="15"
                             Fill="#3CA1C8" />
                    <TextBlock Margin="0 1 0 0"
                               HorizontalAlignment="Center"
                               FontWeight="Bold"
                               Foreground="White"
                               Text="?" />
                </Grid>
            </Grid>
        </Expander>

        <DockPanel Margin="0 10 0 0" LastChildFill="False">
            <DockPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="DockPanel.Dock" Value="Right" />
                    <Setter Property="Padding" Value="8 3" />
                    <Setter Property="Margin" Value="5 0 0 0" />
                    <Setter Property="MinWidth" Value="60" />
                </Style>
            </DockPanel.Resources>

            <Button Grid.Row="5"
                    Grid.Column="1"
                    IsCancel="True"
                    TabIndex="7">
                _Cancel
            </Button>
            <Button Grid.Row="5"
                    Click="OnOkClick"
                    IsDefault="True"
                    TabIndex="6">
                _OK
            </Button>
        </DockPanel>
    </StackPanel>
</Window>
